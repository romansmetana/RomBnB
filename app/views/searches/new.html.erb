<%= form_for @search do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :capacity %><br>
    <%= f.text_field :capacity %>
  </div>
  <div class="field">
    <%= f.label :min_price %> <%= f.text_field :min_price, size: 5 %>
    <%= f.label :max_price %> <%= f.text_field :max_price, size: 5 %>
  </div>
  <div class="action">
    <%= f.submit "Search" %>
  </div>
<% end %>
