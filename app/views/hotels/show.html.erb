<h4 class='text-center mb-5'><%= @hotel.name %></h4>
<% @hotel.rooms.each do |room| %>
  <div class="container-my container-border mb-5">
    <table>
      <thead>
        <tr>
          <th class='col-sm-3'></th>
          <th></th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr class='d-flex justify-content-between'>
          <td>
            <div class='me-2 d-flex align-items-center'>
              <img src="https://fakeimg.pl/250x200/">
            </div>
          </td>
          <td class='ms-2 col-6 d-flex align-items-start flex-column border-end'>
            <h3 class='mb-auto me-3'><%= link_to room.name  %></h3>
            <div class='mt-2'>
              <p>
                <% if room.single_bed %>
                  <p><i class="fa-solid fa-bed"></i> x <%= room.single_bed %></p>
                <% end %></i>
            </p>
            <p>
              <% if room.double_bed %>
                <p><%= show_svg('double-bed.svg') %> x <%= room.double_bed %></p>
              <% end %>
            </p>
            <p><i class="fa-solid fa-house"></i> <%= room.square %> mÂ²</p>
          </div>
        </td>
        <td class='ms-2 col-4 d-flex flex-column border-end gap-4'>
          <div>
            <h5 class='text-secondary'>Price</h5>
            <h5><%= number_to_currency(room.price) %></h5>
          </div>
          <div>
            <h5 class='text-secondary'>Count</h5>
            <h5><%= room.count %></h5>
          </div>
        </td>
        <td class='ms-2 col-2 d-flex align-items-center justify-content-center custom-bg-light'>
          <h6 class="verticaltext"><%= link_to 'Reserve' %></h6>
        </td>
      </tr>
    </tbody>
  </table>
</div>
<% end %>
