<h4 class='text-center mb-5'><%= @hotel.name %></h4>
<% @hotel.rooms.each do |room| %>
  <div class="d-flex container-my container-border mb-5">
    <div class='me-2 col-4 d-flex align-items-center'>
      <img src="https://fakeimg.pl/250x200/">
    </div>
    <div class='col-4 border-end'>
      <h3 class='mb-auto me-3'><%= room.name  %></h3>
      <p>
        <% if room.single_bed %>
          <p><i class="fa-solid fa-bed"></i> x <%= room.single_bed %></p>
        <% end %>
      </p>
      <p>
        <% if room.double_bed %>
          <p><%= show_svg('double-bed.svg') %> x <%= room.double_bed %></p>
        <% end %>
      </p>
      <p><i class="fa-solid fa-house"></i> <%= room.square %> m²</p>
    </div>
    <div class='ms-2 col-2 border-end'>
      <h5 class='text-secondary'>Price</h5>
      <h5><%= number_to_currency(room.price) %></h5>
      <h5 class='text-secondary'>Count</h5>
      <h5><%= room.count %></h5>
    </div>
    <% if @user.owner? %>
      <div class='ms-1 col d-flex align-items-center justify-content-center custom-bg-warning'>
        <h6 class="verticaltext"><%= link_to 'Edit', edit_user_path(@user), class: "text-decoration-none fs-5 fw-light text-primary link-dark " %></h6>
      </div>
    <% else %>
      <div class='ms-1 col d-flex align-items-center justify-content-center custom-bg-green'>
        <h6 class="verticaltext"><%= link_to 'Reservе', reservations_path(room_id: room.id, user_id: current_user.id), data: { "turbo-method": :post }, class: "text-decoration-none fs-5 fw-light text-primary link-dark" %></h6>
      </div>
    <% end %>
  </div>
<% end %>
